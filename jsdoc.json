{
  "source": {
    "include": ["README.md", "index.js", "lib"],
    "includePattern": ".js$",
    "excludePattern": "(node_modules/)"
  },
  "opts": {
    "recurse": true,
    "destination": "tmp/jsdoc/",
    "template": "node_modules/archiver-jsdoc-theme",
    "changelog": "CHANGELOG.md"
  },
  "plugins": [
    "plugins/markdown"
  ],
  "templates": {
    "default": {
      "includeDate": false
    },
    "archiver": {
      "projectName": "Archiver",
      "htmlTitleSuffix": "Archiver Documentation"
    }
  }
}